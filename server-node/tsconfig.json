{
    "compilerOptions": {
        "target": "ES6", // Target ECMAScript version
        "module": "commonjs", // Module system used by Node.js
        "strict": true, // Enable strict type checking
        "esModuleInterop": true, // Ensure compatibility with ES modules
        "skipLibCheck": true, // Skip type checking for third-party libraries
        "outDir": "./dist", // Output directory for compiled JS files
        "rootDir": "./src", // Source directory for TypeScript files
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ] // Files to include in the compilation
}